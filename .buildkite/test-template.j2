{% set docker_image = "us-central1-docker.pkg.dev/vllm-405802/vllm-ci-test-repo/vllm-test:$BUILDKITE_COMMIT" %}
{% set docker_image_ROCm = "us-central1-docker.pkg.dev/vllm-405802/vllm-ci-test-repo/vllm-test_rocm:$BUILDKITE_COMMIT" %}
{% set default_num_gpu = 1 %}
{% set default_working_dir = "/vllm-workspace/tests" %}

steps:

  - label: ":docker: build image"
    commands:
      - "docker build --build-arg max_jobs=16 --tag {{ docker_image }} --target test --progress plain ."
      - "docker push {{ docker_image }}"
    env:
      DOCKER_BUILDKIT: "1"
    retry:
      automatic:
        - exit_status: -1  # Agent was lost
          limit: 5
  - wait

  - label: "AMD Default Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 1"

  - label: "AMD Core Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 5"

  - label: "AMD Distributed Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 7"

  - label: "AMD Engine Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 8"

  - label: "AMD Examples Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 10"

  - label: "AMD Models Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 12"

  - label: "AMD Prefix Caching Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 14"

  - label: "AMD Logits Processor Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 16"

  - label: "AMD Worker Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 17"

  - label: "AMD Speculative Decoding Test"
    agents:
      queue: amd
    command: "bash .buildkite/run-amd-test.sh ${BUILDKITE_COMMIT} 18"

  - label: "Neuron Test"
    agents:
      queue: neuron
    command: bash .buildkite/run-neuron-test.sh

  - label: "CPU Test"
    command: bash .buildkite/run-cpu-test.sh

  {% for step in steps %}
  - label: "{{ step.label }}"
    agents:
      queue: kubernetes
    soft_fail: {{ step.soft_fail or false }}
    {% if step.parallelism %}
    parallelism: {{ step.parallelism }}
    {% endif %}
    retry:
      automatic:
        - exit_status: -1  # Agent was lost
          limit: 5
    plugins:
      - kubernetes:
          podSpec:
            volumes:
              - name: dshm
                emptyDir:
                  medium: Memory
            containers:
              - image: "{{ docker_image }}"
                command: ["bash"]
                args:
                - '-c'
                - "'cd {{ (step.working_dir or default_working_dir) | safe  }} && {{ step.command  or (step.commands | join(' && ')) | safe }}'"
                {% if not step.no_gpu %}
                resources:
                  requests:
                    nvidia.com/gpu: "{{ step.num_gpus or default_num_gpu }}"
                  limits:
                    nvidia.com/gpu: "{{ step.num_gpus or default_num_gpu }}"
                {% endif %}
                env:
                  - name: VLLM_USAGE_SOURCE
                    value: ci-test
                  - name: HF_TOKEN
                    valueFrom:
                      secretKeyRef:
                        name: hf-token-secret
                        key: token
                volumeMounts:
                  - mountPath: /dev/shm
                    name: dshm
  {% endfor %}
