# ============================================================
# LIBRECHAT ENVIRONMENT VARIABLES
# ============================================================

# ============================================================
# SECURITY - CHANGE THESE VALUES!
# ============================================================
JWT_SECRET=your_jwt_secret_change_this_to_random_string
JWT_REFRESH_SECRET=your_refresh_secret_change_this_to_random_string
CREDS_KEY=your_32_character_creds_key_here
CREDS_IV=your_16_character_creds_iv_here

# ============================================================
# CORE SETTINGS
# ============================================================
HOST=0.0.0.0
PORT=3080
DOMAIN_CLIENT=http://localhost:3080
DOMAIN_SERVER=http://localhost:3080

# ============================================================
# MONGODB
# ============================================================
MONGO_URI=mongodb://mongodb:27017/librechat

# ============================================================
# OLLAMA
# ============================================================
OLLAMA_BASE_URL=http://ollama:11434

# ============================================================
# RAG API
# ============================================================
RAG_API_URL=http://rag_api:8000
EMBEDDINGS_PROVIDER=ollama
EMBEDDINGS_MODEL=qwen3-embedding:4b

# RAG Settings
COLLECTION_NAME=librechat_rag
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RAG_USE_FULL_CONTEXT=false

# ============================================================
# MEM0 / OPENMEMORY
# ============================================================
MEM0_API_URL=http://openmemory:8080
MEMORY_ENABLED=true

# ============================================================
# RERANKER SERVICE
# ============================================================
RERANKER_API_URL=http://reranker:8001
RERANKER_ENABLED=true

# ============================================================
# FEATURES
# ============================================================
ENABLE_AGENTS=true
ENABLE_ARTIFACTS=true
ENABLE_MEMORY=true
ENABLE_RAG=true
ENABLE_CODE_INTERPRETER=false  # Set to true if subscribed

# ============================================================
# FILE HANDLING
# ============================================================
FILE_UPLOAD_IP_MAX=1000
FILE_UPLOAD_IP_WINDOW=60
FILE_UPLOAD_USER_MAX=500
FILE_UPLOAD_USER_WINDOW=60

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
CONSOLE_JSON=false
DEBUG_LOGGING=false
DEBUG_CONSOLE=false

# ============================================================
# REGISTRATION & AUTH
# ============================================================
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false

# Session expiry (7 days)
SESSION_EXPIRY=1000 * 60 * 60 * 24 * 7
REFRESH_TOKEN_EXPIRY=1000 * 60 * 60 * 24 * 7

# ============================================================
# VIOLATIONS & MODERATION
# ============================================================
VIOLATIONS_LOG_ENABLED=true
BAN_VIOLATIONS=false
BAN_DURATION=1000 * 60 * 60 * 24 * 7
BAN_INTERVAL=20

# ============================================================
# RATE LIMITING
# ============================================================
LIMIT_CONCURRENT_MESSAGES=true
CONCURRENT_MESSAGE_MAX=3

MESSAGE_IP_MAX=1000
MESSAGE_IP_WINDOW=60
MESSAGE_USER_MAX=500
MESSAGE_USER_WINDOW=60

# ============================================================
# UI CUSTOMIZATION
# ============================================================
APP_TITLE="Local AI Stack"
CUSTOM_FOOTER="Powered by LibreChat + mem0 + Qdrant + Ollama"
HELP_AND_FAQ_URL=https://librechat.ai/docs

# ============================================================
# ADVANCED
# ============================================================
CHECK_BALANCE=false
ENABLE_BALANCE_ENDPOINT=false

# Search
SEARCH=true
MEILI_HOST=http://meilisearch:7700
MEILI_NO_ANALYTICS=true

# ============================================================
# CACHE
# ============================================================
REDIS_URI=redis://redis:6379
USE_REDIS=true

# ============================================================
# OPTIONAL INTEGRATIONS
# ============================================================

# Web Search (Tavily)
# TAVILY_API_KEY=your_tavily_api_key

# Image Generation (if using external services)
# DALLE_API_KEY=your_dalle_key
# STABILITY_API_KEY=your_stability_key

# Code Interpreter (if subscribed)
# CODE_INTERPRETER_API_KEY=your_code_interpreter_key
# CODE_INTERPRETER_ENDPOINT=https://code.librechat.ai

# GitHub MCP (optional)
# GITHUB_TOKEN=your_github_token

# Google Search (optional)
# GOOGLE_API_KEY=your_google_api_key
# GOOGLE_CSE_ID=your_custom_search_engine_id

# ============================================================
# OPENROUTER (for fallback to cloud models)
# ============================================================
# OPENROUTER_API_KEY=your_openrouter_api_key
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
